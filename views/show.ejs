<% include ../views/partials/header %>

<div id="blog">
    <div class="ui main text container segment">
        <div class="ui huge header"><%= blog.title %></div>
        <div class="ui top attached">
            <div class="item">
                <img src="<%= blog.image %>" alt="chutiya net" style="height: 100%; width: 100%;" class="ui rounded image">
                <div class="content">
                    <span><strong>Date: </strong><%= blog.created.toDateString() %></span>
                </div>
                <div class="description">
                    <p><%- blog.body %></p>
                </div>
            </div>
        </div>
    </div>
</div>










