<% include ../views/partials/header %>

<div class="ui main text container" id="blog">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% bg.forEach(function(blog) { %>
            <div class="item">
                <div class="image">
                    <img style="height: 100%; width: 100%;" src="<%= blog.image %>" alt="Chutiya net">
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                    <div class="meta">
                        <p><strong>Date: </strong><%= blog.created.toDateString() %></p>
                    </div>
                    <div class="description">
                        <p><%- blog.body.substring(0, 100) %>...</p>
                    </div>
                    <div class="extra">
                        <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
                            Read More
                            <i class="right chevron icon"></i>
                        </a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>






<% include ../views/partials/footer %>