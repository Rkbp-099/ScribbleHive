<% include ../views/partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Image url</label>
            <input type="url" name="blog[image]" value="<%= blog.image %>" >
        </div>
        <div class="field">
            <label>Blog Content</label>
            <!-- <input type="text" name="blog[title]" placeholder="name"> -->
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <input class="ui violet basic button" type="submit">
    </form>
</div>


<% include ../views/partials/footer %>

